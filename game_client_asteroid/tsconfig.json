{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "node_module/phaser/types"],
    "types": ["Phaser", "node"]
  },
  "include": ["src/**/*"]
}
